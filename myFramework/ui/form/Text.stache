<div class="row divider has-padding no-margin has-error">
	<label class="cell-4">{{label}}</label>
	<input {{formValue}} class="cell-6 no-border"
		type={{type}} name={{name}} placeholder={{tip}}>
	<i class="cell-2 icon {{#if error.flag}}icon-times{{/if}} text-red justify-end  "></i>
	{{#if error.flag}}
		<div class="help-text text-important has-padding">
		{{error.message}}
		</div>
	{{/if}}
</div>